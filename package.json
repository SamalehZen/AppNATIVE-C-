{
  "name": "speechly-clone-native",
  "version": "1.0.0",
  "description": "Native C++ modules for Speechly clone - Window detection and text injection",
  "main": "dist/main/index.js",
  "scripts": {
    "build": "npm run build:ts && npm run build:native",
    "build:ts": "tsc",
    "build:native": "cd native && node-gyp rebuild",
    "build:native:debug": "cd native && node-gyp rebuild --debug",
    "clean": "npm run clean:ts && npm run clean:native",
    "clean:ts": "rimraf dist",
    "clean:native": "cd native && node-gyp clean",
    "rebuild": "npm run clean && npm run build",
    "rebuild:native": "npm run clean:native && npm run build:native",
    "postinstall": "electron-rebuild",
    "start": "electron .",
    "start:dev": "NODE_ENV=development electron .",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "prepare": "npm run build:native"
  },
  "dependencies": {
    "node-addon-api": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "electron-rebuild": "^3.2.9",
    "node-gyp": "^10.0.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0"
  },
  "gypfile": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "darwin",
    "win32",
    "linux"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/SamalehZen/AppNATIVE-C-.git"
  },
  "keywords": [
    "electron",
    "native",
    "addon",
    "napi",
    "accessibility",
    "window-detection",
    "text-injection",
    "hotkey",
    "speechly"
  ],
  "author": "",
  "license": "MIT"
}
